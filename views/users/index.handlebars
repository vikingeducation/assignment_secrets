

<header class="page-header">
  <h1>Users</h1>
</header>


{{#if users.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>
          Secrets
        </th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each users as |user| }}
        <tr>
          <td>
            <a href="/users/{{ user.id }}">{{ user.username }}</a>
          </td>
          <td>
            <a href="/users/{{ user.id }}">{{ user.email }}</a>
          </td>
          <td>
            <a href="/users/{{ user.id }}">{{ user.secrets.length }}</a>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No users</p>
{{/if }}
