<h1 style="text-align: center;">Welcome {{currentUser.username}}</h1>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3>All Secrets:</h3>
  </div>
  <div class="panel-body">
    {{#each secrets as |secret|}}

    
    <div style="height: 75px; border: 1px solid black;" class="col-xs-10 col-xs-offset-1">
    {{#if secret.hasAccess}}
      <h5>{{secret.body}}</h5>
    {{else}}
      {{#if secret.pending}}
        <h5>Request Pending!</h5>
      {{else}}
        <form action="/secrets/request" method="post">
          <button>Request access!</button>
        </form>
      {{/if}}
    {{/if}}
    <p>{{secret.author.username}}</p>
    </div>
    {{/each}}
  </div>
</div>